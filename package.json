{
  "name": "default",
  "version": "0.0.2",
  "fullName": "Base template",
  "description": "Official base template, supports all the devices compatible with the Factory. Applied by default.",
  "keywords": [
     "default",
     "clean",
     "simple"
   ],
  "joshfire": {
    "images": {
      "small":"marketing/image-small.png",
      "big":"marketing/image-big.png"
    },
    "devices": [
      {
        "devices": "desktop",
        "startfile": "app/index.desktop.html",
        "images": "marketing/preview-desktop.png"
      },
      {
        "devices": "phone",
        "startfile": "app/index.phone.html",
        "images":"marketing/preview-phone.png",
        "screenshots":["marketing/screenshot-phone.png"]
      },
      {
        "devices": "tablet",
        "startfile": "app/index.tablet.html",
        "images":"marketing/preview-tablet.png",
        "screenshots":["marketing/screenshot-tablet-portrait.png"]    
      },
      {
        "devices": "tv",
        "startfile": "app/index.tv.html",
        "images":"marketing/preview-tv.png",
        "screenshots":["marketing/screenshot-tv.jpg"]
      },
      {
        "devices": "*",
        "startfile": "app/index.html"
      }
    ],
    "datasources": {
      "main": {
        "title": "Main tabs",
        "description": "Add up to 6 tabs in your application",
        "multiple":true
      }
    },
    "options": {
      "schema": {
        "abouthtml": {
          "type": "string"
        }
      },
    "form": [
      "datasources.main",
      {
        "key": "abouthtml",
        "type": "textarea"
      }
    ]
    }
  }
}